{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "lib": ["ES2021"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node10"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
